<h1>Update Pet</h1>

<form method="post" action="/pets">
  <p>Name:</p>
  <input type="text" name="pet[name]" id="pet_name">

  <p>Choose an existing owner:</p>
  <% @owners.each do |owner|%>
    <input type="radio" value="<%=owner.id%>" name="pet[owner_id]" id="<%=owner.id%>"<%='checked' if @pet.owner == owner%>><%=owner.name%></input>
  <% end %>
  <br></br>

  <label>and/or, create a new owner:</label>
  <br></br>

  <label>name:</label>
  <input name="owner[name]" type="text" id="owner_name">
  <input type="submit" value="Update Pet">
</form>
